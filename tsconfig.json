{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "assets":["assets/*"],
      "utils":["utils/*"],
      "appBridge":["appBridge/*"]
    },
    "rootDirs": ["include"],
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "rootDir": ".",
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true
  },
  "include": [
    // 所需要用ts的文件
    "src/*",
    "lib/**/*",
    "types/**/*"
  ],
  "reportFiles": ["src/**/*.{ts,tsx}"],

  "exclude": [
    //排除文件
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js"
  ]
}
